<div class="body-div">
	<%= form_tag("/search", method: "get") do %>
	  <%= label_tag(:q, "Search for:") %>
	  <%= text_field_tag(:q) %>
	  <%= submit_tag("Search") %>
	<% end %>

	<p>
		<strong>Category:</strong>
		<%= @category.name %>
	</p>


	<% if @videos.any? %>
		<div class="video-gallery">
			<!-- in_groups_of is a Rails method that divides the array of videos into group of 3 elements, the if video condition is required bc if theres vacancies, the last element will be nil -->
			<!-- took out in_groups_of because i didn't see how it applied to my page -->
			<!-- change -->

			<% @videos.each do |video| %>
				<% if video %>
					<div>
						<%= link_to image_tag(video.thumbnail), category_video_path(video.category,video), class: 'video-thumb' %>
						<p><%= link_to "#{truncate(video.title)}", category_video_path(video.category,video) %></p>
					</div>
				<% end %>
			<% end %>
		</div>
	<% end %>
</div>
